{% extends 'classic/index.html.j2' %}

{% block head %}
    {{ super() }}  {# Ensure other head content from the classic template is included #}
{% endblock head %}

{% block body %}
    <body style="background-color: #5A7D7C; margin: 0; padding: 0;">
        <h1 style="text-align:center; color:#ffffff; font-size: 2.5rem; margin-top: 20px;">
            {{ resources.metadata.name.replace('_', ' ').title() }}
        </h1>

        <div style="background-color: #ffffff; padding: 30px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin: 20px auto; max-width: 800px;">
            <p style="font-size: 1.2rem; line-height: 1.8; color: #333;">
                <strong style="color: #5A7D7C; font-weight: bold;">Description:</strong>
                <span id="dataset-description" style="display: block; margin-top: 10px;">DESCRIPTION_PLACEHOLDER</span>
            </p>
            <p style="font-size: 1.2rem; line-height: 1.8; color: #333;">
                <strong style="color: #5A7D7C; font-weight: bold;">Dataset Source:</strong>
                <span id="dataset-source" style="display: block; margin-top: 10px;">DATASET_SOURCE_PLACEHOLDER</span>
            </p>
        </div>

        {{ super() }}  {# This includes the default content from the classic template #}

        <script type="text/javascript">
            window.onload = function() {
                document.title = "{{ resources.metadata.name.replace('_', ' ').title() }}";
            };
        </script>
    </body>
{% endblock body %}
