{% extends 'classic/index.html.j2' %}

{% block head %}
    {{ super() }}  {# Ensure other head content from the classic template is included #}
    <style>
        /* Body Styling */
        body {
            background-color: #5A7D7C; /* Muted Teal Green */
            color: white; /* White text for contrast */
        }

        /* Header Styling */
        h1 {
            font-size: 2.5rem;
            color: white;
            text-align: center;
            margin-top: 20px;
        }

        /* Card Styles */
        .content-card {
            background-color: #E8EBEE; /* Soft Grayish Blue background for cards */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin: 20px auto;
            max-width: 800px;
        }

        .content-card p {
            font-size: 1.2rem;
            line-height: 1.6;
            color: #444; /* Dark Gray text inside cards */
        }

        .content-card strong {
            color: #5A7D7C; /* Use the same shade of green for strong labels */
        }

        /* Links inside content cards */
        .content-card a {
            color: #5A7D7C;
            text-decoration: none;
        }

        .content-card a:hover {
            color: white; /* Hover effect on links */
        }
    </style>
{% endblock head %}

{% block body %}
    <h1>{{ resources.metadata.name.replace('_', ' ').title() }}</h1>

    <div class="content-card">
        <p>
            <strong>Description:</strong>
            <span id="dataset-description">DESCRIPTION_PLACEHOLDER</span>
        </p>
        <p>
            <strong>Dataset Source:</strong>
            <span id="dataset-source">DATASET_SOURCE_PLACEHOLDER</span>
        </p>
    </div>

    {{ super() }}  {# This includes the default content from the classic template #}

    <script type="text/javascript">
        window.onload = function() {
            document.title = "{{ resources.metadata.name.replace('_', ' ').title() }}";
        };
    </script>
{% endblock body %}
