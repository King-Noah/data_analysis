{% extends 'classic/index.html.j2' %}

{% block head %}
    {{ super() }}  {# Ensure other head content from the classic template is included #}
    <style>
        /* Make the body and container responsive */
        body {
            background-color: #5A7D7C;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #ffffff;
            font-size: 2.5rem;
            margin-top: 20px;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin: 20px auto;
            max-width: 800px;
        }

        p {
            font-size: 1.2rem;
            line-height: 1.6;
            color: #444;
        }

        strong {
            color: #5A7D7C;
        }

        span {
            font-size: 1.4rem;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            p {
                font-size: 1rem;
            }

            span {
                font-size: 1.2rem;
            }

            .container {
                padding: 15px;
                max-width: 90%;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 1.5rem;
            }

            p {
                font-size: 0.9rem;
            }

            span {
                font-size: 1rem;
            }

            .container {
                padding: 10px;
                max-width: 95%;
            }
        }
    </style>
{% endblock head %}

{% block body %}
    <body>
        <h1>
            {{ resources.metadata.name.replace('_', ' ').title() }}
        </h1>

        <div class="container">
            <p>
                <strong>Description:</strong>
                <span id="dataset-description">DESCRIPTION_PLACEHOLDER</span>
            </p>
            <p>
                <strong>Dataset Source:</strong>
                <span id="dataset-source">DATASET_SOURCE_PLACEHOLDER</span>
            </p>
        </div>

        {{ super() }}  {# This includes the default content from the classic template #}

        <script type="text/javascript">
            window.onload = function() {
                document.title = "{{ resources.metadata.name.replace('_', ' ').title() }}";
            };
        </script>
    </body>
{% endblock body %}
